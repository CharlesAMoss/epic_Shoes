<html>
    <head>
        <meta charset="utf-8">
        <title>Your feet need shoes!</title>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
        <link href="./css/main.css" rel="stylesheet">

    </head>
    <body>

        <div class="container">
            <h1>{{ store.getStoreName }}</h1>

            <form action="/stores/{{ store.getId }}" method="post">
                <input name="_method" type="hidden" value="patch">
                <input id="store_id" name="store_id" type="hidden" value="{{ store.getId }}">
                <h4>Updated store info:</h4>
                <div class="form-group">
                    <label for="name">Store Name</label>
                    <input class="form-control" id="name" name="name" required type="text" value="{{ store.getStoreName }}">
                </div>


                <button class="btn btn-success" type="submit">Submit</button>
            </form>

            <form action="/stores/{{ store.getId }}" method="post">
                <input name="_method" type="hidden" value="delete">
                <button class="btn btn-danger" type="submit">Delete this store</button>
            </form>
        </div>

    </body>
</html>
