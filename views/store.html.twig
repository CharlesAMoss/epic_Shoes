<html>
    <head>
        <title>Your feet need shoes!</title>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
        <link href="./css/main.css" rel="stylesheet">
    </head>
    <body>

        <div class="container">
            <h1>{{ store.getStoreName }}</h1>

            {% if store_brands is not empty %}
            <h3>List of brands available at {{ store.getStoreName }}:</h3>
            <ul>
                {% for brand in store_brands %}
                <li>
                    <h4>
                        <strong>
                            <a href="/brand/{{ brand.getId }}">{{ brand.getBrandName }}</a>
                        </strong>
                    </h4>
                </li>
                {% endfor %}
            </ul>
            {% else %}
            <h3>There are no brands to list.</h3>
            {% endif %}

            <h3>Add a brand to {{ store.getStoreName }}:</h3>

            <form action="/store/{{ store.getId }}" method="post">
                <select class="form-control" id="brand_id" name="brand_id">
                    {% for brand in all_brands %}
                    <option value="{{ brand.getId }}">{{ brand.getBrandName }}</option>
                    {% endfor %}
                </select>
                <br>
                <button class="btn btn-success" type="submit">Submit</button>
            </form>
            <br>
            {% for store in stores %}
            <form action="/edit_store">
               <input id="store_id" name="store_id" type="hidden" value="{{ store.getId }}">
               <button type="submit" class="btn btn-info">Edit {{ store.getStoreName }}</button>
           </form>
           {% endfor %}

            <form action="/">
                <button class="btn btn-default" type="submit">Home</button>
            </form>

        </div>

    </body>

</html>
