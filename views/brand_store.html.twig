<html>
    <head>
        <meta charset="utf-8">
        <title>Your feet need shoes!</title>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
        <link href="./css/main.css" rel="stylesheet">

    </head>
    <body>

        <div class="container">
            <h1>Shoe Brands</h1>

            {% if brands is not empty %}
            <h3>List of brands:</h3>
            <p>- click for more info -</p>

            <ul>
                {% for brand in brands %}
                <li>
                    <h4>
                        <strong>
                            <a href="/brand/{{ brand.getId }}">{{ brand.getBrandName }}</a>
                        </strong>
                    </h4>
                </li>
                {% endfor %}
            </ul>
            {% else %}
            <h3>There are no brands to list.</h3>
            {% endif %}

            <form action="/brand_store_add_form">
                <button class="btn btn-default" type="submit">Add New Brand</button>
            </form>

            {% if display_form == true %}
            <form action="/add_brand" method="post">
                <div class="form-group">
                    <label for="brand_name">Add another brand</label>
                    <input class="form-control" id="brand_name" name="brand_name" placeholder="Brand Name" required type="text">
                </div>
                <button class="btn btn-success" type="submit">Submit</button>
            </form>
            {% endif %}
            <br>

            <form action="/">
                <button class="btn btn-default" type="submit">Home</button>
            </form>
        </div>

    </body>
</html>
